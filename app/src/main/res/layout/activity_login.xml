<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@color/blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/splash_bg"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:weightSum="3">

        <!-- First part -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1.3"
            android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_welcome_text"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp"/>

        <!-- Email id -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/solid_back_bg">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/email"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="5dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edt_back_bg"
                android:hint="Enter registered email"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/edt_dimen_14"
                android:paddingStart="10dp"
                android:inputType="textEmailAddress"/>
        </LinearLayout>

        <!-- Password -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/solid_back_bg"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/lock"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="5dp"
                android:tint="@color/white"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edt_back_bg"
                android:hint="Enter password"
                android:textColor="@color/black"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/edt_dimen_14"
                android:paddingStart="10dp"
                android:inputType="textPassword"/>
        </LinearLayout>

        <!-- Forgot password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password ?"
            android:textSize="@dimen/edt_dimen_14"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/blue"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_gravity="end"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"/>
        </LinearLayout>

        <!-- Second part -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.4">
        <!-- Or view -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginVertical="20dp">
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1.4"
                android:background="@color/black"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="OR"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/edt_dimen_14"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1.4"
                android:background="@color/black"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

        <!-- Third part -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.3">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/joinBtn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="@color/white"
                app:cardUseCompatPadding="true"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/google"
                        android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Continue With Google"
                    android:textSize="@dimen/edt_dimen_14"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_centerInParent="true"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/signUpBtn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginVertical="10dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="@color/white"
                app:cardUseCompatPadding="true"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/linkedin"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Continue With Linkedin"
                        android:textSize="@dimen/edt_dimen_14"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/signInBtn"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginVertical="10dp"
                app:cardCornerRadius="20dp"
                android:backgroundTint="@color/white"
                app:cardUseCompatPadding="true"
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/key"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif"
                        android:text="Continue With SSO"
                        android:textSize="@dimen/edt_dimen_14"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>